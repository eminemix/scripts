on 1:START: {
  .nick ivali $+ $rand(0,999)
  .server eu.freenode.net 8000
  .server -me otcirc.jf.intel.com 6697
  .server -me public-irc.w3.org 6667
}

on 1:CONNECT: {
  if ($network == freenode) {
    .nick ivali
    .msg NickServ identify ivali fakepasswd
    .join #rosedu
    .join #android
    .join #linux
    .join #android-dev
    .join #android-root
    .join #haskell-ro
    .join #mptcp
    .join #chromium-os
    .join #chromium
  }
  if ($network == OTCIRC) {
    .nick ivali
    .join #otcromania
  }
}
